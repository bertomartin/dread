= form_for @home do |f|
  - if @home.errors.any?
    #error_explanation
      %h2= "#{pluralize(@home.errors.count, "error")} prohibited this home from being saved:"
      %ul
        - @home.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :permalink
    = f.text_field :permalink
  .actions
    = f.submit 'Save'
