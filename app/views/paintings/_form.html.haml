= form_for @painting do |f|
  - if @painting.errors.any?
    #error_explanation
      %h2= "#{pluralize(@painting.errors.count, "error")} prohibited this painting from being saved:"
      %ul
        - @painting.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :image
    = f.text_field :image
  .form-group
    = f.label :gallery_id, "Gallery"
    = f.collection_select :gallery_id, Gallery.order(:name), :id, :name, include_blank: true
  .actions
    = f.submit 'Save'
