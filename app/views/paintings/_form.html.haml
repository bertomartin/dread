= form_for @painting, :html => {:multipart => true} do |f|
  - if @painting.errors.any?
    #error_explanation
      %h2= "#{pluralize(@painting.errors.count, "error")} prohibited this painting from being saved:"
      %ul
        - @painting.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name
    = f.text_field :name, :class => 'form-control'
  .form-group
    = f.label :description
    = f.text_area :description, :class => 'form-control'
  .form-group
    = f.label :image
    = f.file_field :image
  .form-group
    = f.label :gallery_id, "Gallery"
    = f.collection_select :gallery_id, Gallery.order(:name), :id, :name, include_blank: true
  %button.btn.btn-primary{:type => "submit"}
    Save
